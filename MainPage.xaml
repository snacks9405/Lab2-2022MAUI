<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2_2022Maui.MainPage">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <VerticalStackLayout BackgroundColor="Gray" Grid.Column="0" Grid.Row="0">
                    <Label Text="one"/>

                </VerticalStackLayout>
                <VerticalStackLayout BackgroundColor="Red" Grid.Column="0" Grid.Row="1">
                    <Label Text="two"/>

                </VerticalStackLayout>

                <VerticalStackLayout BackgroundColor="Yellow" Grid.Column="0" Grid.Row="2">
                    <Label Text="three"/>

                </VerticalStackLayout>

            </Grid>
            <VerticalStackLayout BackgroundColor="Purple" Grid.Row="0" Grid.Column="1">
                <Label Text="four"/>

            </VerticalStackLayout>
            <VerticalStackLayout BackgroundColor="Green" Grid.Row="1" Grid.Column = "0" Grid.ColumnSpan= "2">
                <Label Text="five"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>

